@model KUSYS_Demo.Business.DTOs.NewStudentDto

@{
    ViewData["Title"] = "NewStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <h5>New Student</h5>
    <br />


    <form asp-controller="Home" asp-action="NewStudent" method="post">

        <div class="form-group">

            <label class="small mb-1" asp-for="FirstName">First Name</label>
            <input class="form-control py-4" asp-for="FirstName" type="text" placeholder="Enter First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>


        </div>

        <div class="form-group">

            <label class="small mb-1" asp-for="LastName">Last Name</label>
            <input class="form-control py-4" asp-for="LastName" type="text" placeholder="Enter Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label class="small mb-1" asp-for="BirthDate">Birth Date</label>
            <input class="form-control py-4" asp-for="BirthDate" type="date" placeholder="Enter Birth Date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label class="small mb-1" asp-for="PhoneNumber">Phone Number</label>
            <input class="form-control py-4" asp-for="PhoneNumber" type="text" placeholder="Enter Phone Number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label class="small mb-1" asp-for="Adress">Address</label>
            <input class="form-control py-4" asp-for="Adress" type="text" placeholder="Enter Address" />
            <span asp-validation-for="Adress" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

  @section scripts{

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

